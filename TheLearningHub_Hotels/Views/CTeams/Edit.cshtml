@model TheLearningHub_Hotels.Models.CTeam

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}


<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Teamid" />
            <div class="form-group">
                <label asp-for="TeamMembername" class="control-label"></label>
                <input asp-for="TeamMembername" class="form-control" />
                <span asp-validation-for="TeamMembername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </form>
    </div>
</div>

