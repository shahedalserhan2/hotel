@model IEnumerable<TheLearningHub_Hotels.Models.CTeam>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

@* <h1>Index</h1> *@

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamMembername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagepath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamMembername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
                <td>
                    <img src=@Url.Content("~/images/" + item.Imagepath) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Teamid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Teamid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Teamid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
