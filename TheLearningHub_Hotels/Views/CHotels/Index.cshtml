@model IEnumerable<TheLearningHub_Hotels.Models.CHotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

@* <h1>Index</h1>
 *@
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hotelname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagepath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hotelname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td>
                    <img src=@Url.Content("~/images/" + item.Imagepath) asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Hotelid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Hotelid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Hotelid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
