@model TheLearningHub_Hotels.Models.CTestimonial
@{
    ViewData["Title"] = "Testimonial";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<body>
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 p-0" style="background-image: url(img/carousel-1.jpg);">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center pb-5">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Testimonial</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Testimonial</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Testimonial Form Start -->
    <!-- Page Header End -->
    <!-- Testimonial Form Start -->
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Testimonial Form -->
                <div class="col-md-6 col-lg-5">
                    <div class="testimonial-wrap p-4 p-md-5">
                        <h3 class="text-center mb-4" style="font-size: 2rem; font-weight: bold;">Share Your Experience</h3>
                        <form method="POST" asp-action="Testimonial" class="register-form" id="testimonial-form">
                            <!-- Testimonial Text -->
                            <div class="form-group">
                                <label asp-for="TestimonialText" style="font-size: 1.25rem;">Your Testimonial</label>
                                <textarea asp-for="TestimonialText" class="form-control" placeholder="Write your testimonial here..." rows="4" style="font-size: 1rem;"></textarea>
                                <span asp-validation-for="TestimonialText" class="text-danger" style="font-size: 0.875rem;"></span>
                            </div>

                            <!-- Rating -->
                            <div class="form-group">
                                <label asp-for="Rating" style="font-size: 1.25rem;">Rating</label>
                                <select asp-for="Rating" class="form-control" style="font-size: 1rem;">
                                    <option value="">Select Rating</option>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <option value="@i">@i Star(s)</option>
                                    }
                                </select>
                                <span asp-validation-for="Rating" class="text-danger" style="font-size: 0.875rem;"></span>
                            </div>

                            <!-- Hotel Selection -->
                            <div class="form-group">
                                <label asp-for="Hotelid" style="font-size: 1.25rem;">Hotel</label>
                                <select asp-for="Hotelid" class="form-control" style="font-size: 1rem;">
                                    <option value="">Select Hotel</option>
                                    @foreach (var hotel in ViewBag.Hotels as IEnumerable<TheLearningHub_Hotels.Models.CHotel>)
                                    {
                                        <option value="@hotel.Hotelid">@hotel.Hotelname</option>
                                    }
                                </select>
                                <span asp-validation-for="Hotelid" class="text-danger" style="font-size: 0.875rem;"></span>
                            </div>

                            <!-- Hidden field for STATUS -->
                            <input type="hidden" asp-for="STATUS" value="Pending" />

                            <!-- Submit button -->
                            <div class="col-md-2">
                                <button class="btn btn-primary w-100" onclick="submitForm('@User.Identity.IsAuthenticated')">Submit Testimonial</button>
                            </div>

                            <script>
                                function submitForm(isAuthenticated) {
                                   
                                        document.getElementById('login-form').submit();
                                    } if {
                                        // If the user is not authenticated, show an alert and redirect to the login page
                                        alert('Please log in to submit the form.');

                                    }
                                }
                            </script>
                        </form>
                    </div>
                </div>

                <!-- Images -->
                <div class="col-md-6 col-lg-7">
                    <div class="row g-3">
                        <div class="col-6 text-end">
                            <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/homeAssest/img/about-1.jpg" style="margin-top: 25%;">
                        </div>
                        <div class="col-6 text-start">
                            <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/homeAssest/img/about-2.jpg">
                        </div>
                        <div class="col-6 text-end">
                            <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/homeAssest/img/about-3.jpg">
                        </div>
                        <div class="col-6 text-start">
                            <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/homeAssest/img/about-4.jpg">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Testimonial Form End -->
    <!-- Newsletter Start -->
    <div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="row justify-content-center">
            <div class="col-lg-10 border rounded p-1">
                <div class="border rounded text-center p-1">
                    <div class="bg-white rounded text-center p-5">
                        <h4 class="mb-4">Subscribe Our <span class="text-primary text-uppercase">Newsletter</span></h4>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control w-100 py-3 ps-4 pe-5" type="text" placeholder="Enter your email">
                            <button type="button" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Newsletter End -->
    <script src="~/js/site.js"></script>
</body>
