                                    <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                                </div>
                                <p class="text-body mb-3">@item.Description</p>
                                <div class="d-flex justify-content-between">
                                   <a class="btn btn-sm btn-primary rounded py-2 px-4" asp-action="Room" asp-controller="Home" asp-route-hotelId="@item.Hotelid">View Detail</a>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

