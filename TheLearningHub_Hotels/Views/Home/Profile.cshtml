@model TheLearningHub_Hotels.Models.CUser

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="d-flex justify-content-center align-items-center flex-column" style="min-height: 100vh; padding-bottom: 50px;">
    <h1 class="mb-4" style="font-size: 2.5rem;">My Profile</h1>
    <div class="col-md-6 bg-light p-4 rounded shadow">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Fname)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Fname)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Lname)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Lname)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Imagepath)
            </dt>
            <dd class="col-sm-8">
                <img src=@Url.Content("~/images/" + Model.Imagepath) asp-append-version="true" style="border-radius: 20%;" width="100" height="100" />
            </dd>
        </dl>
        <div class="text-center">
            <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary w-50">Edit</a>
            <a asp-action="Index" class="btn btn-secondary w-50 mt-2">Back to List</a>
        </div>
    </div>
</div>


